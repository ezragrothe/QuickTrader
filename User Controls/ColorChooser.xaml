<UserControl x:Class="ColorChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:my="clr-namespace:QuickTrader"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
			<WrapPanel Orientation="Horizontal" Name="panelMain">
				<StackPanel Orientation="Horizontal">
                    <Button Content="." MinHeight="20" MinWidth="20" Margin="3,3,0,3" Name="btnEditColor" Click="btnEditColor_Click" ToolTip="Edit Color" />
                    <Button Content="+" MinHeight="20" MinWidth="20" Margin="3,3,0,3" Name="btnAddColor" Click="btnAddColor_Click" ToolTip="Add Color" />
                    <Button Content="X" MinHeight="20" MinWidth="20" Margin="3,3,0,3" Name="btnDeleteColor" Click="btnDeleteColor_Click" ToolTip="Remove Color" />
                </StackPanel>
			</WrapPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
