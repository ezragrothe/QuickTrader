<my:BaseWindow x:Class="UpdateHistoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:QuickTrader"
    Title="Update History" Height="403" Width="585" Loaded="BaseWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox IsReadOnly="True" Margin="3" Name="txtText" VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="1" MinHeight="23" MinWidth="82" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3" Content="OK" Click="Button_Click" />
    </Grid>
</my:BaseWindow>
